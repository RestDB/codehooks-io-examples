{{#extend "layout"}}
    {{#content "main"}}
    <!-- Hero Section -->
    <div class="bg-white text-center py-16">
        <h1 class="text-4xl font-bold text-gray-800">About Us</h1>
        <p class="text-md text-gray-600 mt-4">Dedicated to Excellence and Innovation</p>
    </div>

    <!-- Company Overview -->
    <section class="container mx-auto px-6 py-10">
        <h2 class="text-3xl font-semibold text-gray-800">Who We Are</h2>
        <p class="mt-4 text-gray-600">Acme Corp is a leading provider of innovative solutions. Since our founding in 1990, we've been at the forefront of industry changes and technological advancements, providing our clients with exceptional services and products.</p>
        <p class="mt-2 text-gray-600">Our team of experts is committed to delivering quality and value to our customers, partners, and community.</p>
    </section>

    <!-- Our Team -->
    <section class="bg-gray-100 py-10">
        <div class="container mx-auto px-6">
            <h2 class="text-3xl font-semibold text-center text-gray-800">Meet Our Team</h2>
            <div class="flex flex-wrap items-center justify-center mt-8 gap-8">
                <!-- Team Member 1 -->
                <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 px-4 text-center">
                    <img class="w-32 h-32 rounded-full mx-auto" src="/assets/img/persona1.png" alt="Team Member 1">
                    <h3 class="mt-4 font-semibold text-lg text-gray-800">Jane Doe</h3>
                    <p class="text-gray-600">Chief Executive Officer</p>
                </div>
                <!-- Team Member 2 -->
                <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 px-4 text-center">
                    <img class="w-32 h-32 rounded-full mx-auto" src="/assets/img/persona2.png" alt="Team Member 2">
                    <h3 class="mt-4 font-semibold text-lg text-gray-800">John Smith</h3>
                    <p class="text-gray-600">Chief Technology Officer</p>
                </div>
                <!-- Team Member 3 -->
                <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 px-4 text-center">
                    <img class="w-32 h-32 rounded-full mx-auto" src="/assets/img/persona3.png" alt="Team Member 3">
                    <h3 class="mt-4 font-semibold text-lg text-gray-800">Emily Johnson</h3>
                    <p class="text-gray-600">Head of Marketing</p>
                </div>
                <!-- Team Member 4 -->
                <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 px-4 text-center">
                    <img class="w-32 h-32 rounded-full mx-auto" src="/assets/img/persona4.png" alt="Team Member 4">
                    <h3 class="mt-4 font-semibold text-lg text-gray-800">Michael Brown</h3>
                    <p class="text-gray-600">Sales Director</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Our History -->
    <section class="container mx-auto px-6 py-10">
        <h2 class="text-3xl font-semibold text-gray-800">Our History</h2>
        <p class="mt-4 text-gray-600">Acme Corp started as a small startup in 1990, focused on delivering innovative solutions. Over the years, we have expanded our services and grown into a global leader in our industry.</p>
        <!-- Add more historical details here -->
    </section>
    {{/content}}
{{/extend}}