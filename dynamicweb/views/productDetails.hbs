{{#extend "layout"}}
    {{#content "main"}}
    <!-- Product Details Section -->
    <section class="container mx-auto px-6 py-10">
        <div class="bg-white rounded shadow-lg p-6 md:flex md:items-center">
            <!-- Product Image -->
            <img src="https://picsum.photos/400/300" alt="Product Image" class="w-full md:w-1/3 h-auto rounded mb-6 md:mb-0">

            <!-- Product Info -->
            <div class="md:ml-6 md:w-2/3">
                <h2 class="text-2xl font-bold text-gray-800 mb-2">{{product.name}}</h2>
                <p class="text-gray-600">{{product.category}}</p>
                <p class="text-gray-800 font-semibold">Price: ${{product.price}}</p>
                <p class="text-green-600">{{product.stock}}</p>
                <p class="mt-4 text-gray-600">Detailed description of the product goes here. It could include features, benefits, usage instructions, and any other relevant information that a customer would find useful.</p>
                <!-- Add to Cart Button (Example) -->
                <button class="mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Add to Cart
                </button>
            </div>
        </div>
    </section>
    {{/content}}
{{/extend}}